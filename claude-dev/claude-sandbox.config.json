{
  "dockerfile": "./claude-dev/Dockerfile.claude-dev",
  "containerPrefix": "suews-research",
  
  "autoStartClaude": true,
  "detached": false,
  "allowedTools": ["*"],
  
  "maxThinkingTokens": 150000,
  "bashTimeout": 900000,
  
  "autoPush": false,
  "autoCreatePR": false,
  
  "setupCommands": [
    "echo 'ğŸš€ Initialising SUEWS development environment...'",
    "echo 'Working directory: '$(pwd)",
    "echo 'Available space: '$(df -h . | tail -1 | awk '{print $4}')",
    
    "echo 'ğŸ Setting up Python environment...'",
    "export PATH=/opt/conda/bin:$PATH",
    "eval \"$(micromamba shell hook --shell bash)\"",
    "micromamba activate suews-dev",
    
    "echo 'ğŸ“¦ Verifying SUEWS repository structure...'",
    "if [ ! -d 'src/suews' ]; then echo 'âŒ SUEWS source not found'; exit 1; fi",
    "if [ ! -d 'test' ]; then echo 'âŒ Test directory not found'; exit 1; fi",
    "echo 'âœ… SUEWS repository structure verified'",
    
    "echo 'ğŸ“¦ Initialising git submodules...'",
    "git submodule update --init --recursive",
    
    "echo 'ğŸ”¨ Building SUEWS in development mode...'",
    "make dev",
    
    "echo 'ğŸ§ª Verifying SUEWS installation...'",
    "python -c \"import supy; print(f'âœ… SuPy version: {supy.__version__}')\" || echo 'âš ï¸  SuPy import failed - ready for debugging'",
    
    "echo 'ğŸ”¬ Running basic functionality tests...'",
    "python -m pytest test/test_data_model.py -v || echo 'âš ï¸  Some tests failed - ready for development'",
    
    "echo 'ğŸ‰ SUEWS development environment ready!'",
    "echo 'ğŸ“ Repository: '$(pwd)",
    "echo 'ğŸ Python environment: suews-dev'",
    "echo 'ğŸ› ï¸  Available commands: suews-build, suews-test, suews-docs, suews-clean'",
    "echo 'ğŸ“š Documentation: make livehtml'",
    "echo 'ğŸƒ Sample run: cd src/supy/sample_run && suews-run .'",
    "echo ''"
  ],
  
  "runArgs": [
    "--cpus", "6",
    "--memory", "12g",
    "--shm-size", "2g",
    "--pids-limit", "1024",
    "--ulimit", "nofile=65536:65536"
  ],
  
  "includeUntracked": false,
  "gitConfig": {
    "preserveHistory": false
  }
}